[flake8]
ignore =
    # Line break occurred before a binary operator
    W503,
    # Whitespace before ':'
    E203,
    # Line too long (82 > 79 characters)
    E501,
    # Do not use bare except, specify exception instead
    E722,
    # flake8-return:
    # Shouldn`t assign value to variable if it will be use only as return value
    R504
exclude =
    .git,
    .venv,
    tox
max-complexity = 10
max-line-length = 128
